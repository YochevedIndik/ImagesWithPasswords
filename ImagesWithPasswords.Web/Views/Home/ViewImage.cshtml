@model ViewImageVm

@if (Model.CorrectPassword == true)
{
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <img src="/uploads/@Model.Image.ImagePath" style="width: 800px;" />
            <br />
            <h3>Views: @Model.Image.Views</h3>
            
        </div>
    </div>
}
@if (Model.CorrectPassword == false)
{
    <div class="row">
        <div class="col-md-6 offset-md-3 jumbotron">
            <h4>@Model.Message</h4>
          <h4>Please enter the password for this image:</h4>
            <form method="post" action="/home/viewimage?imageId=@Model.Image.Id">
                <input type="hidden" name="id" value="@Model.Image.Id" />
                <input type="password" class="form-control" placeholder="Password" name="password" />
                <br />
                <button class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
}



